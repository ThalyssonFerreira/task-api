{
  "name": "task-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
  "prepare": "husky",
  "dev": "nodemon --watch src --exec \"node src/server.js\"",
  "start": "node src/server.js",
  "lint": "eslint .",
  "lint:fix": "eslint . --fix",
  "format": "prettier --write .",
  "test": "vitest run",
  "test:watch": "vitest",
  "db:migrate": "node-pg-migrate",
  "db:migrate:up": "node-pg-migrate up",
  "db:migrate:down": "node-pg-migrate down",
  "db:seed": "node db/seeds/index.js",
  "db:seed:demo": "node db/seeds/index.js up --demo=true",
  "db:seed:down": "node db/seeds/index.js down"
},

  "lint-staged": {
  "*.{js,cjs,mjs,json}": [
    "eslint --fix",
    "prettier --write"
  ],
  "*.{md,yml,yaml}": [
    "prettier --write"
  ]
},

  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
